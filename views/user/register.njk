{% extends '../layout.njk' %}

{% block head %}
<title>Indeed Clone || Register</title>
{% endblock head %}

{% block content %}
<div id="registerContainer" class="container px-4 md:px-0 pt-12 flex flex-col items-center justify-center mx-auto" id="register">
    <a href="/">
        <div class="logo" style="width: 120px;height: 30px;"></div>
    </a>
    <div class="login-main p-5 bg-white mt-6">
        
        <h3 class="font-semibold text-black mb-6" style="font-size: 24px;">Bir Hesap Oluştur (ücretsiz)</h3>
        <div class="social mt-3">
            <a class="text-gray-700 border-gray-600 border-2 social-login py-2 px-3 flex items-center" href="#">
                <Icon type="logo-google"></Icon><span class="mt-1 text-center w-full  font-semibold">Google ile Giriş
                    Yap</span>
            </a>
        </div>
        <div class="social mt-4">
            <a class="text-gray-700 border-gray-600 border-2 social-login py-2 px-3 flex items-center" href="#">
                <Icon type="logo-twitter"></Icon><span class="mt-1 text-center w-full  font-semibold">Twitter ile Giriş
                    Yap</span>
            </a>
        </div>
        <div class="social mt-4">
            <a class="text-gray-700 border-gray-600 border-2 social-login py-2 px-3 flex items-center" href="#">
                <Icon type="logo-facebook"></Icon><span class="mt-1 text-center w-full  font-semibold">Facebook ile
                    Giriş Yap</span>
            </a>
        </div>
        <div class="w-full text-center mt-5">
            <span class="or block">veya</span>
        </div>
        <form method="POST">
            <div class="flex flex-col mt-5">
                <span class="text-gray-700 font-semibold">E-mail Adresi</span>
                <i-input name="email" :class="$v.email.$error ? 'error' : ''" @input="$v.email.$touch()" v-model="email" class="mt-2 login-register-input" size="large"></i-input>
                <span v-if="$v.email.$error" class="text-red-600 font-semibold error-span">Lütfen geçerli bir email adresi gir</span>
                <span class="text-red-600 font-semibold error-span">{{errors}}</span>
            </div>
    
            <div class="flex flex-col mt-5">
                <span class="text-gray-700 font-semibold">Şifre</span>
                <i-input name="password" :class="$v.password.$error ? 'error' : ''" @input="$v.password.$touch()" type="password"  v-model="password" class="mt-2 login-register-input" size="large"></i-input>
                <span v-if="$v.password.$error" class="text-red-600 font-semibold error-span">Lütfen en az 8 karakter uzunluğunda bir şifre gir</span>
            </div>
            <div class="mt-3">
                <Checkbox>Bu cihazda beni hatırla</Checkbox>
            </div>
            <i-button :disabled="$v.$invalid" html-type="submit" style="border-radius: 33px;" class=" font-semibold w-full mt-5 p-5 flex items-center justify-center"
                type="primary">Hesap Oluştur
            </i-button>            
        </form>
    </div>
</div>
{% endblock content %}