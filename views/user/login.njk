{% extends '../layout.njk' %}
{% block head %}
<title>Indeed Clone || Login</title>
{% endblock head %}
{% block content %}
<div id="loginContainer" class="container px-4 md:px-0 pt-12 flex flex-col items-center justify-center mx-auto">
    <a href="/"><div class="logo" style="width: 120px;height: 30px;"></div></a>
    <div class="login-main p-5 bg-white mt-6">
        <h3 class="font-semibold text-black mb-6" style="font-size: 24px;">Giriş Yapın</h3>
        <form method="post">
            <div class="flex flex-col">
                <span class="text-gray-700 font-semibold">E-mail Adresi</span>
                <i-input name="email" :class="$v.email.$error ? 'error' : ''" @input="$v.email.$touch()" v-model="email" class="mt-2 login-register-input" size="large"></i-input>
                <span v-if="$v.email.$error" class="text-red-600 font-semibold error-span">Lütfen geçerli bir email adresi gir</span>
            </div>
            <div class="flex flex-col mt-3">
                <span class="text-gray-700 font-semibold">Şifre</span>
                <i-input name="password" @input="$v.password.$touch()" :class="$v.password.$error ? 'error' : ''" type="password" class="mt-2 login-register-input" size="large" v-model="password">
                </i-input>
                <span v-if="$v.password.$error" class="text-red-600 font-semibold error-span">Lütfen en az 8 karakter uzunluğunda bir şifre gir</span>

            </div>
            <div class="mt-3">
                <Checkbox v-model="single">Bu cihazda beni hatırla</Checkbox>
            </div>
            <i-button html-type="submit" :disabled="$v.$invalid" style="border-radius: 33px;" class=" font-semibold w-full mt-5 p-5 flex items-center justify-center" type="primary">
                Giriş
            </i-button>
        </form>
        <div class="mt-5">
            <a href="#">Şifrenizi mi unuttunuz?</a>
        </div>
        <div class="w-full text-center mt-5">
            <span class="or block">veya</span>
        </div>
        <div class="social mt-3">
            <a class="text-gray-700 border-gray-600 border-2 social-login py-2 px-3 flex items-center" href="#"><Icon type="logo-google"></Icon><span class="mt-1 text-center w-full  font-semibold">Google ile Giriş Yap</span></a>
        </div>
        <div class="social mt-4">
            <a class="text-gray-700 border-gray-600 border-2 social-login py-2 px-3 flex items-center" href="#"><Icon type="logo-twitter"></Icon><span class="mt-1 text-center w-full  font-semibold">Twitter ile Giriş Yap</span></a>
        </div>
        <div class="social mt-4">
            <a class="text-gray-700 border-gray-600 border-2 social-login py-2 px-3 flex items-center" href="#"><Icon type="logo-facebook"></Icon><span class="mt-1 text-center w-full  font-semibold">Facebook ile Giriş Yap</span></a>
        </div>
        <a class="text-blue-700 font-semibold w-full text-center inline-block my-5" href="/user/register">Indeed'i ilk kez mi kullanıyorsun? Hesap oluştur</a>
    </div>
</div>
{% endblock content %}